@model IEnumerable<ParkingLotManagament.ViewModels.PricingPlanViewModel>



<h1>Index</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.HourlyPricing)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.DailyPricing)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.MinimumHours)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Weekend)
            </th>
            <th class="text-center"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td class="text-center">@Html.DisplayFor(modelItem => item.HourlyPricing)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.DailyPricing)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.MinimumHours)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.Weekend)</td>
            <td class="text-center">
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<style>
.table {
    font-size: 14px;
}

.table th,
.table td {
    padding: 12px;
    vertical-align: middle;
    text-align: center;
}

.table th {
    background-color: #f8f9fa;
    font-weight: bold;
    color: #6c757d;
    border-bottom: 1px solid #dee2e6;
}

.table-striped tbody tr:nth-of-type(odd) {
    background-color: #f2f2f2;
}

.btn {
    font-size: 14px;
    padding: 6px 12px;
}
</style>